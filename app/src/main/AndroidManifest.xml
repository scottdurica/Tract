<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="emroxriprap.com.tract" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MenuScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewTractScreen"
            android:label="@string/title_activity_new_tract_screen"
            android:parentActivityName=".MenuScreen" >
        </activity>
        <activity
            android:name=".EditTractScreen"
            android:label="@string/title_activity_edit_tract_screen" >
        </activity>
        <activity
            android:name=".DateChooserScreen"
            android:label="@string/title_activity_date_chooser_screen" >
        </activity>
        <activity
            android:name=".PropertyListScreen"
            android:label="@string/title_activity_property_list_screen"
            android:parentActivityName=".MenuScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="emroxriprap.com.tract.MenuScreen" />
        </activity>
        <activity
            android:name=".EditPropertyScreen"
            android:label="@string/title_activity_edit_property_screen" >
        </activity>
    </application>

</manifest>
