<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MenuScreen"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv_new_tract"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        card_view:cardCornerRadius="4dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        card_view:cardBackgroundColor="@color/cardBackground"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:stateListAnimator="@drawable/lift_up_animation"
        android:layout_margin="15dp"
        android:transitionName="cardBG">

        <TextView
            android:id="@+id/tv_newTract"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="New Tract/"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/textColorPrimary"
            android:gravity="center_vertical"
            android:transitionName="cardText"
            android:paddingLeft="10dp" />
    </android.support.v7.widget.CardView>

</RelativeLayout>
